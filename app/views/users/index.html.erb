<h1>Showing Users</h1>

<%= link_to 'New User', new_user_path %>

<TABLE>
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Email</th>
		<th colspan="2"></th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= user.id %></td>
		<td><%= user.name %></td>
		<td><%= user.email %></td>
		<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
	</tr>
    <% end %>
</TABLE>
